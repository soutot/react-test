{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
      "react",
      "jsx-a11y",
      "import"
  ],
  "rules": {
      "react/jsx-no-bind": "off",
      "react/sort-comp": "off",
      "no-console": "off",
      "linebreak-style": "off",
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/prefer-stateless-function": "off",
      "class-methods-use-this": "off"
  },
  "globals": {
      "fetch": false
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [".js", ".android.js", ".ios.js"]
          }
      }
  }
}
